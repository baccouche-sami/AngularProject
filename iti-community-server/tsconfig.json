{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2021",
        "lib": [
            "ES2021"
        ],
        "skipLibCheck": true,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noStrictGenericChecks": true,
        "strictFunctionTypes": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "typeRoots": [
            "./src/typings",
            "./node_modules/@types"
        ],
        "paths": {
            "*": [
                "src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
    ]
}
